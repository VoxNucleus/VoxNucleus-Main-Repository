<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>createUser</servlet-name>
        <servlet-class>FallingDown.user.createUser.createUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaptchaCreate</servlet-name>
        <servlet-class>FallingDown.user.createUser.CaptchaCreate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jcaptcha</servlet-name>
        <servlet-class>com.octo.captcha.servlet.image.SimpleImageCaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>valideModificationUser</servlet-name>
        <servlet-class>FallingDown.user.modify.validateModificationUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>FallingDown.user.login.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyUser</servlet-name>
        <servlet-class>FallingDown.user.modify.www.ModifyUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>FallingDown.user.modify.www.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Option</servlet-name>
        <servlet-class>FallingDown.user.option.Option</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Disconnect</servlet-name>
        <servlet-class>FallingDown.user.login.Disconnect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Messages</servlet-name>
        <servlet-class>FallingDown.user.messages.Messages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuickLogin</servlet-name>
        <servlet-class>FallingDown.user.login.QuickLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Subscribe</servlet-name>
        <servlet-class>FallingDown.user.createUser.Subscribe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordReset</servlet-name>
        <servlet-class>FallingDown.user.modify.password.reset.PasswordReset</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordActivate</servlet-name>
        <servlet-class>FallingDown.user.modify.password.reset.PasswordActivate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jcaptcha</servlet-name>
        <url-pattern>/jcaptcha.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createUser</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaCreate</servlet-name>
        <url-pattern>/CaptchaCreate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>valideModificationUser</servlet-name>
        <url-pattern>/validatemodificationuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyUser</servlet-name>
        <url-pattern>/modifyuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Option</servlet-name>
        <url-pattern>/option</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Disconnect</servlet-name>
        <url-pattern>/disconnect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Messages</servlet-name>
        <url-pattern>/messages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuickLogin</servlet-name>
        <url-pattern>/quicklogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Subscribe</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordReset</servlet-name>
        <url-pattern>/modify/passwordreset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordActivate</servlet-name>
        <url-pattern>/modify/passwordactivate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
